<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for sample1 -->
    <style name="Sample1_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/sample1ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Sample1.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Widget.Sample1.TextInputLayout</item>
        <item name="hintTextColor">@color/sample1TextColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/sample1ColorPrimaryDark</item>
    </style>

    <style name="Widget.Sample1.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/sample1TextColor</item>
        <item name="backgroundTint">@color/sample1ColorPrimaryDark</item>
    </style>

    <style name="Widget.Sample1.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/sample1TextColor</item>
    </style>

    <style name="TextAppearance.Sample1.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sample1TextColor</item>
    </style>


    <!--Style for sample2 -->
    <style name="Sample2_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/sample2ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Sample2.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Widget.Sample2.TextInputLayout</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:radius">5dp</item>
        <item name="boxStrokeColor">@color/sample2ColorPrimaryDark</item>
        <item name="boxBackgroundColor">#D8FFFFFF</item>
        <item name="errorTextColor">#F87171</item>
    </style>


    <!--Style for sample 3 -->
    <style name="Widget.Sample3.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Widget.Sample3.TextInputLayout</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.Sample3.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Sample3.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/sample3ColorPrimaryDark</item>
    </style>

    <style name="Sample3_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/sample3ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample3.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Sample 4-->
    <style name="Sample4_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/sample4ColorPrimaryDark</item>
        <item name="colorAccent">@color/sample4colorAccent</item>
    </style>

    <style name="Widget.Sample4.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Widget.Sample3.TextInputLayout</item>
        <item name="hintTextColor">#393f52</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>
    <style name="Widget.Sample4.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/sample4ColorPrimaryDark</item>
    </style>

</resources>
